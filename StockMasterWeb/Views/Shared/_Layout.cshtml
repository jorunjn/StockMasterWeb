<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StockMasterWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StockMasterWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #1f2327;">
            <div class="container d-flex align-items-center">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="d-flex align-items-center text-white text-decoration-none gap-2">
                    <div style="font-size: 1.75rem;">🏠</div>
                    <span class="fs-4 fw-semibold">StockMaster</span>
                </a>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="text-white text-center py-3 mt-auto" style="background-color: #1f2327;">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - StockMaster | dev by Aliaksei Karpach</small>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
