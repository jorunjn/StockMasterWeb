@model StockMasterWeb.Models.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
        <h3 class="text-center mb-4">🔐 Вход в систему</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3 text-center">
                <label asp-for="Username" class="form-label fw-bold">👤 Логин</label>
                <input asp-for="Username" class="form-control text-center" placeholder="Введите логин" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3 text-center">
                <label asp-for="Password" class="form-label fw-bold">🔒 Пароль</label>
                <input asp-for="Password" type="password" class="form-control text-center" placeholder="Введите пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Войти</button>
        </form>
    </div>
</div>
